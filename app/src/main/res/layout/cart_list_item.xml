<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:focusable="false"
        android:id="@+id/cart_list_check"
        android:button="@null"
        android:background="@drawable/selector_check"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/cart_list_image"
        android:layout_toRightOf="@id/cart_list_check"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_width="200px"
        android:layout_height="200px" />
    <TextView
        android:layout_marginTop="20px"
        android:layout_alignTop="@id/cart_list_image"
        android:layout_toRightOf="@id/cart_list_image"
        android:id="@+id/cart_list_name"
        android:text="美白嫩肤面膜"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignBottom="@id/cart_list_image"
        android:layout_toRightOf="@id/cart_list_image"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_marginLeft="10px"
            android:layout_gravity="center_vertical"
            android:textColor="#FC6B87"
            android:text="¥79.90"
            android:textSize="50px"
            android:id="@+id/cart_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30px"
            android:id="@+id/cart_list_num"
            android:text="数量:2"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <LinearLayout
        android:layout_marginRight="20px"
        android:layout_alignBottom="@id/cart_list_image"
       android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/coupons"
            android:id="@+id/cart_list_juan"
            android:layout_width="60px"
            android:layout_height="60px" />
        <ImageView
            android:layout_marginLeft="30px"
            android:src="@mipmap/pledge"
            android:id="@+id/cart_list_di"
            android:layout_width="60px"
            android:layout_height="60px" />
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="10px"
        android:id="@+id/cart_list_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="140px"
            android:text="购买数量"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cart_reduce_image"
                android:padding="12px"
                android:background="@drawable/add_image_bg"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/reduce_unable"
                android:layout_width="80px"
                android:layout_height="80px" />
            <TextView
                android:id="@+id/cart_buy_num"
                android:background="@drawable/add_image_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#000"
                android:layout_width="100px"
                android:layout_height="80px" />
            <ImageView
                android:id="@+id/cart_add_image"
                android:padding="12px"
                android:background="@drawable/add_image_bg"
                android:src="@mipmap/add_able"
                android:layout_width="80px"
                android:layout_height="80px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
