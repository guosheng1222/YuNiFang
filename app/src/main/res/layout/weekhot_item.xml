<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:padding="15px"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:id="@+id/week_info_image"
        android:layout_width="300px"
        android:layout_height="300px" />
    <LinearLayout
        android:layout_alignRight="@id/week_info_image"
        android:background="#DCDCDC"
        android:layout_width="1dp"
        android:layout_height="310px"/>
    <LinearLayout
        android:layout_below="@id/week_info_image"
        android:background="#DCDCDC"
        android:layout_marginLeft="10px"
        android:layout_width="300px"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/week_info_title"
        android:text="哈哈"
        android:textSize="40px"
        android:textColor="#000"
        android:layout_toRightOf="@id/week_info_image"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
    android:id="@+id/week_info_nowPrice"
    android:text="现价"
    android:textSize="30px"
    android:textColor="#FC6B87"
    android:layout_below="@id/week_info_title"
    android:layout_toRightOf="@id/week_info_image"
        android:layout_marginLeft="30px"
    android:layout_marginTop="80px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/week_info_afterPrice"
        android:text="原价"
        android:textSize="25px"
        android:textColor="#000"
        android:layout_below="@id/week_info_nowPrice"
        android:layout_toRightOf="@id/week_info_image"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="150px"
        android:layout_marginRight="30px"
        android:id="@+id/week_info_image1"
        android:layout_alignParentRight="true"
        android:layout_width="100px"
        android:layout_height="100px" />
    <TextView
        android:visibility="gone"
        android:layout_marginRight="30px"
        android:layout_alignBottom="@id/week_info_image"
        android:id="@+id/week_info_text"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <!-- <LinearLayout
        android:layout_marginTop="18px"
        android:layout_below="@id/week_info_image"
        android:background="#DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>-->
</RelativeLayout>
