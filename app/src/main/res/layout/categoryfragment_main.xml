<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:background="#fff"
        android:padding="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColorHint="#A1A1A1"
            android:background="@drawable/category_edit"
            android:id="@+id/category_edit"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:paddingLeft="80px"
            android:textColor="#000"
            android:textCursorDrawable="@null"
            android:hint="请输入商品名称"/>
        <ImageView
            android:layout_marginLeft="15px"
            android:src="@mipmap/icon_search"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignLeft="@id/category_edit"
            android:layout_alignBottom="@id/category_edit"
            android:layout_alignTop="@id/category_edit"
            />
    </RelativeLayout>
    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/category_SpringView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:paddingBottom="30px"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="700px">
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="10px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:id="@+id/classify_facial_mask"
                android:src="@mipmap/classify_facial_mask"
                android:layout_width="360px"
                android:layout_height="670px"
                android:layout_gravity="center" />
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="30px"
                android:layout_marginTop="10px"
                android:id="@+id/classify_emollient_water"
                android:layout_toRightOf="@id/classify_facial_mask"
                android:src="@mipmap/classify_emollient_water"
                android:layout_width="300px"
                android:layout_height="200px" />
            <ImageView
                android:id="@+id/classify_body_lotion"
                android:scaleType="fitXY"
                android:layout_marginLeft="8px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/classify_body_lotion"
                android:layout_width="300px"
                android:layout_height="200px" />
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginTop="10px"
                android:id="@+id/classify_facial_cleanser"
                android:layout_alignRight="@id/classify_emollient_water"
                android:layout_below="@id/classify_emollient_water"
                android:src="@mipmap/classify_facial_cleanser"
                android:layout_width="300px"
                android:layout_height="200px" />
            <ImageView
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:id="@+id/classify_other"
                android:layout_marginLeft="8px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_alignBottom="@id/classify_facial_cleanser"
                android:src="@mipmap/classify_other"
                android:layout_width="300px"
                android:layout_height="200px" />
            <ImageView
                android:id="@+id/classify_kit"
                android:scaleType="fitXY"
                android:layout_alignLeft="@id/classify_facial_cleanser"
                android:layout_alignRight="@id/classify_other"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/classify_facial_cleanser"
                android:src="@mipmap/classify_kit"
                android:layout_width="600px"
                android:layout_height="230px" />
        </RelativeLayout>
            <RelativeLayout
                android:background="#fff"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_width="match_parent"
                android:layout_height="130px">
                <TextView
                    android:id="@+id/category_yy"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="—   按功效   —"
                    android:textSize="40px"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginTop="20px"
                    android:layout_below="@id/category_yy"
                    android:layout_centerHorizontal="true"
                    android:text="美丽从选对产品开始"
                    android:textSize="26px"
                    android:layout_marginBottom="10px"
                    android:textColor="#9B9B9B"
                    android:layout_width="wrap_content"
                    android:layout_height="50px" />
            </RelativeLayout>
            <LinearLayout
                android:background="#fff"
                android:padding="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/classify_hydrating"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:background="#fff"
                    android:src="@mipmap/classify_hydrating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/classify_soothing"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/classify_soothing"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/classify_control_oil"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/classify_control_oil"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/classify_whitening"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/classify_whitening"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:id="@+id/classify_firming"
                    android:layout_weight="1"
                    android:src="@mipmap/classify_firming"
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="130px">
            <TextView
                android:id="@+id/category_ff"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="—   按肤质   —"
                android:textColor="#666666"
                android:textSize="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="20px"
                android:layout_centerHorizontal="true"
                android:text="适合自己的才是最好"
                android:textSize="26px"
                android:textColor="#9B9B9B"
                android:layout_marginBottom="10px"
                android:layout_below="@id/category_ff"
                android:layout_width="wrap_content"
                android:layout_height="50px" />
        </RelativeLayout>
        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/fuzhi0"
                    android:textColor="@drawable/selector_category_color1"
                    android:text="#混合性肤质#"
                    android:textSize="30px"
                    android:background="#DEDEB9"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:layout_width="0px"
                    android:layout_height="150px" />
                <Button
                    android:id="@+id/fuzhi1"
                    android:textColor="@drawable/selector_category_color1"
                    android:text="#中性肤质#"
                    android:textSize="30px"
                    android:background="#EED4C2"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="150px" />
            </LinearLayout>
            <LinearLayout
                android:padding="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/fuzhi2"
                    android:textColor="@drawable/selector_category_color1"
                    android:text="#干性肤质#"
                    android:textSize="30px"
                    android:background="#D4D7F7"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:layout_width="0px"
                    android:layout_height="150px" />
                <Button
                    android:id="@+id/fuzhi3"
                    android:textColor="@drawable/selector_category_color1"
                    android:text="#油性肤质#"
                    android:textSize="30px"
                    android:background="#D1E1C3"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="150px" />
            </LinearLayout>
            <LinearLayout
                android:padding="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/fuzhi4"
                    android:textColor="@drawable/selector_category_color1"
                    android:text="#痘痘肤质#"
                    android:textSize="30px"
                    android:background="#F1D2CB"
                    android:layout_weight="1"
                    android:layout_marginRight="10px"
                    android:layout_width="0px"
                    android:layout_height="150px" />
                <Button
                    android:id="@+id/fuzhi5"
                    android:textColor="@drawable/selector_category_color1"
                    android:text="#敏感肤质#"
                    android:textSize="30px"
                    android:background="#BFF1EC"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="150px" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="8px"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/classify_triangle"
                android:layout_width="50px"
                android:layout_height="50px" />
            <TextView
                android:id="@+id/category_mm"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="   明星产品   "
                android:textSize="32px"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                />
            <TextView
                android:text="----"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/category_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/category_mm"
                android:text="----"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.bwie.view.MyGridView
            android:id="@+id/category_MyGridView"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:background="#fff"
            android:numColumns="2"
            android:padding="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lookAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ACACAC"
            android:text="查看所有商品"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:textSize="30px"
            android:layout_gravity="center_horizontal"
            />
</LinearLayout>
</ScrollView>
    </com.liaoinstan.springview.widget.SpringView>
</LinearLayout>
