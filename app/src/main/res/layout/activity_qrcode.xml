<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#fff"
        android:paddingBottom="10px"
        android:paddingTop="10px">
        <ImageView
            android:id="@+id/qr_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:src="@drawable/selector_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textSize="40px" />
        <ImageView
            android:id="@+id/qr_share"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:src="@drawable/selector_share" />
    </RelativeLayout>
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/qrcode_image"
        android:layout_width="500px"
        android:layout_height="500px" />
    <ImageView
        android:layout_marginLeft="80px"
        android:id="@+id/qr_ic"
        android:layout_marginBottom="30px"
        android:layout_alignLeft="@id/qrcode_image"
        android:layout_above="@id/qrcode_image"
        android:src="@mipmap/ynf_ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="100px"
        android:textColor="#000"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@id/qr_ic"
        android:layout_alignTop="@id/qr_ic"
        android:id="@+id/YNF_banben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="御泥坊  \n  1.0"
        />
</RelativeLayout>
