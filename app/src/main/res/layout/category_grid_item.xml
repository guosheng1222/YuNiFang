<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vp_image_bg"
    android:padding="10px"
    >
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:id="@+id/category_grid_image"
        android:layout_width="400px"
        android:layout_height="400px" />
    <ImageView
       android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/category_grid_image2"
        android:layout_width="80px"
        android:layout_height="80px" />
    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/category_grid_title"
        android:layout_width="400px"
        android:maxLines="2"
        android:textSize="35px"
        android:layout_height="100px"
        android:text="御泥坊面膜"
        android:textColor="#000"
        android:layout_below="@id/category_grid_image"
        />
    <TextView
        android:id="@+id/category_grid_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美白好用"
        android:textColor="#C7C7C7"
        android:textSize="35px"
        android:layout_below="@id/category_grid_title"
        android:layout_marginTop="10px"
        android:layout_marginBottom="20px"
        />
    <TextView
        android:id="@+id/category_grid_nowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FC6B87"
        android:text="20.00"
        android:textSize="32px"
       android:layout_below="@id/category_grid_info"
        />
    <TextView
        android:id="@+id/category_grid_afterPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40.00"
        android:layout_alignBottom="@id/category_grid_nowPrice"
        android:textColor="#C7C7C7"
        android:textSize="25px"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@id/category_grid_nowPrice"
        />
</RelativeLayout>
