<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400px">
    <LinearLayout
        android:layout_marginTop="40px"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380px">
        <RelativeLayout
            android:id="@+id/addCar_pop_rel"
            android:padding="30px"
            android:layout_width="match_parent"
            android:layout_height="260px">
            <ImageView
                android:id="@+id/addCar_pop_image"
                android:layout_width="150px"
                android:layout_height="150px" />
            <TextView
                android:textColor="#FC6B87"
                android:text="¥1.00"
                android:layout_toRightOf="@id/addCar_pop_image"
                android:id="@+id/addCar_pop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:layout_below="@id/addCar_pop_price"
                android:layout_alignLeft="@id/addCar_pop_price"
                android:text="库存100件"
                android:id="@+id/addCar_pop_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:layout_below="@id/addCar_pop_kucun"
                android:layout_alignLeft="@id/addCar_pop_price"
                android:text="限购10件"
                android:id="@+id/addCar_pop_xiangou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/reduce_image"
                    android:padding="12px"
                    android:background="@drawable/add_image_bg"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/reduce_unable"
                    android:layout_width="60px"
                    android:layout_height="60px" />
                <TextView
                    android:id="@+id/buy_num"
                    android:background="@drawable/add_image_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000"
                    android:layout_width="80px"
                    android:layout_height="60px" />
                <ImageView
                    android:id="@+id/add_image"
                    android:padding="12px"
                    android:background="@drawable/add_image_bg"
                    android:src="@mipmap/add_able"
                    android:layout_width="60px"
                    android:layout_height="60px" />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_alignBottom="@id/addCar_pop_rel"
            android:background="@drawable/dashline"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="30px"
                android:layout_centerHorizontal="true"
                android:id="@+id/addCar_pop_ok"
                android:text="确定"
                android:textColor="#fff"
                android:background="@drawable/selector_shape_login"
                android:layout_width="200px"
                android:layout_height="80px" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/addCar_pop_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:src="@mipmap/order_detail_close_icon"
            />
    </RelativeLayout>
</RelativeLayout>
