<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/order_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待付款"
        android:textColor="#FC6B87"
        android:layout_margin="30px"/>

    <com.bwie.view.MyListView
        android:id="@+id/OrderFragment_recyclerView_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/sumNumber_sumMoney_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20px"
        android:textColor="#000"
        android:text="e342432" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_margin="10px"
            android:id="@+id/cancelOrder_but"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="取消订单"
            android:textColor="#A0A0A0"
            android:background="@drawable/shape4"
            />

        <Button
            android:id="@+id/payOrder_but"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:text="订单付款"
            android:layout_margin="10px"
            android:textColor="#fff"
            android:background="@drawable/selector_shape_login"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>
